
@{
    ViewBag.Title = "SOrder";
    Layout = "~/Views/Shared/_Sale.cshtml";
}
@using Models;
<div class="dashboard-list">
    <h3>订单管理 </h3>
    <table class="manage-table">
        <tbody>
            @{
                foreach (var item in ViewBag.SOrder as List<Sell>)
                {

                    <tr class="responsive-table">
                        <td class="listing-photoo">
                            @if (@item.SImg.Count() == 0)
                            {
                                <img src="~/Content/Selling/waneng1.jpg" alt="listing-photo" class="img-fluid">
                            }
                            else
                            {
                                <img src="~/Content/Selling/@item.SImg.FirstOrDefault().Photo" alt="listing-photo" class="img-fluid">
                            }
                        </td>
                        <td class="title-container">
                            <h2><a href="../Selling/Index?SellID=@item.SellID">@item.SellAddress/@item.SellVillage</a></h2>
                            <h5 class="d-none d-xl-block d-lg-block d-md-block">@item.SellHStructurechar </h5>
                            <h6 class="table-property-price">价格：@item.SellPrice /每平</h6>
                            <h6 class="table-property-price">联系方式：@item.Phone</h6>
                            <h6 class="table-property-price">
                                状态：
                                @if (item.TransactionStatus == 0)
                                {
                                    @:待售
                                }
                                else if (item.TransactionStatus == 1)
                                {
                                    @:出售
                                }
                                else
                                {
                                    @:下架
                                }
                            </h6>
                        </td>
                        <td class="expire-date">@item.NewTime</td>
                        <td class="action">
                            <a href="EditSelling?SellID=@item.SellID"><i class="fa fa-pencil"></i> 修改</a>
                            <a href="#" class="delete"><i class="fa fa-remove"></i> 删除</a>
                        </td>
                    </tr>

                }
            }

        </tbody>
    </table>
</div>

