
@{
    ViewBag.Title = "LIndex";
    Layout = "~/Views/Shared/_Backstage.cshtml";
}
@using Models;
@{
    Models.Userd userds = Session["Userds"] as Userd;
}

<div class="submit-address dashboard-list">
    <h4 class="bg-grea-3">发布租房信息</h4>
    <form method="post" action="AddLease" enctype="multipart/form-data" id="formlease">
        <input type="hidden" class="input-text" name="TransactionStatus" value="0">
        <input type="hidden" class="input-text" name="UState" value="0">
        <input type="hidden" class="input-text" name="UserID" value="@userds.UserID">
        <input type="hidden" class="input-text" name="NewTime" value="@DateTime.Now">
        <h4 class="bg-grea-3">基本信息</h4>
        <div class="search-contents-sidebar">
            <div class="row pad-2">
                <input type="hidden" class="input-text" name="UserID" value="1">
                @*<input type="hidden" class="input-text" name="UserID" value="@userds.UserID">*@
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>所在城市</label>
                        <input type="text" class="input-text" name="LeaseAddress" placeholder="城市名称" required="required">
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>所在小区</label>
                        <input type="text" class="input-text" name="LeaseVillage" placeholder="小区名" required="required">
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>所在楼层</label>
                        <input type="text" class="input-text" name="LeaseFloor" placeholder="？层" required="required">
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>面积</label>
                        <input type="text" class="input-text" name="LeaseArea" placeholder="平米" required="required">
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>维护时间</label>
                        <input type="text" class="input-text" name="LeaseMaintain" placeholder="年/月/日" required="required">
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>房屋类型</label>
                        <input type="text" class="input-text" name="LeaseHStructure" placeholder="？室？厅" required="required">
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>租金</label>
                        <input type="text" class="input-text" name="LeasePrice" placeholder="每月" required="required">
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>租赁方式</label>
                        <select class="selectpicker search-fields" name="LeaseLease" >
                            <option value="1">整租</option>
                            <option value="2">合租</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>入住方式</label>
                        <select class="selectpicker search-fields" name="LeaseCheckin">
                            <option value="1">入住</option>
                            <option value="2">需打扫</option>
                        </select>
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>车位</label>
                        <select class="selectpicker search-fields" name="LeaseParkinglot">
                            <option value="1">有</option>
                            <option value="2">无</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>朝向</label>
                        <select class="selectpicker search-fields" name="LeaseOrientation">
                            <option value="1">坐北朝南</option>
                            <option value="2">坐南朝北</option>
                            <option value="3">坐东朝西</option>
                            <option value="4">坐西朝东</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>电梯情况</label>
                        <select class="selectpicker search-fields" name="LeaseElevator">
                            <option value="1">有</option>
                            <option value="2">无</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>用水</label>
                        <select class="selectpicker search-fields" name="LeaseWaterint">
                            <option value="1">民水</option>
                            <option value="2">其他</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>用电</label>
                        <select class="selectpicker search-fields" name="LeaseElectric">
                            <option value="1">民电</option>
                            <option value="2">其他</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>燃气</label>
                        <select class="selectpicker search-fields" name="LeaseGas">
                            <option value="1">天然气</option>
                            <option value="2">液化气</option>
                            <option value="3">电气</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>供暖</label>
                        <select class="selectpicker search-fields" name="LeaseHeating">
                            <option value="1">自给自足</option>
                            <option value="2">集中供暖</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>租期</label>
                        <select class="selectpicker search-fields" name="LeaseLeaseTerm">
                            <option value="3">年租</option>
                            <option value="2">季租</option>
                            <option value="1">月租</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label>看房时间</label>
                        <select class="selectpicker search-fields" name="LeaseTime">
                            <option value="1">上午（8:00-12：00）</option>
                            <option value="2">下午（14：00-18:00）</option>
                            <option value="3">晚上（19:30-22:00）</option>
                            <option value="4">全天（8:00-22:00）</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <h4 class="bg-grea-3">配套设施</h4>
        <div class="row pad-2">
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="checkbox checkbox-theme checkbox-circle">
                    <input id="checkbox1" type="checkbox" value="FacilitiesWashing" name="list">
                    <label for="checkbox1">
                        洗衣机
                    </label>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="checkbox checkbox-theme checkbox-circle">
                    <input id="checkbox2" type="checkbox" value="Facilitiesairconditioner" name="list">
                    <label for="checkbox2">
                        空调
                    </label>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="checkbox checkbox-theme checkbox-circle">
                    <input id="checkbox4" type="checkbox" value="Facilitieswardrobe" name="list">
                    <label for="checkbox4">
                        衣柜
                    </label>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="checkbox checkbox-theme checkbox-circle">
                    <input id="checkbox5" type="checkbox" value="FacilitiesTV" name="list">
                    <label for="checkbox5">
                        电视
                    </label>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="checkbox checkbox-theme checkbox-circle">
                    <input id="checkbox7" type="checkbox" value="FacilitiesRefrigerator" name="list">
                    <label for="checkbox7">
                        冰箱
                    </label>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="checkbox checkbox-theme checkbox-circle">
                    <input id="checkbox8" type="checkbox" value="FacilitiesBed" name="list">
                    <label for="checkbox8">
                        床
                    </label>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="checkbox checkbox-theme checkbox-circle">
                    <input id="checkbox3" type="checkbox" value="FacilitiesWIFI" name="list">
                    <label for="checkbox3">
                        WiFi
                    </label>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="checkbox checkbox-theme checkbox-circle">
                    <input id="checkbox6" type="checkbox" value="FacilitiesNaturalgas" name="list">
                    <label for="checkbox6">
                        天然气
                    </label>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="checkbox checkbox-theme checkbox-circle">
                    <input id="checkbox9" type="checkbox" name="list" value="FacilitiesHeating" >
                    <label for="checkbox9">
                        暖气
                    </label>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="checkbox checkbox-theme checkbox-circle">
                    <input id="checkbox10" type="checkbox" name="list" value="FacilitiesHeater" />
                    <label for="checkbox10">
                        热水器
                    </label>
                </div>
            </div>
        </div>
        <h4 class="bg-grea-3">上传图片</h4>
        <div class="row pad-20">
            <div class="col-lg-12">
                <input type="file" name="Photo" multiple="multiple" class="form-control update_file" />
            </div>
        </div>
        <h4 class="bg-grea-3">人员指定</h4>
        <div class="row pad-2">
            <div class="col-lg-4 col-md-4 col-sm-12">
                <div class="form-group">
                    <label>销售</label>
                    <select class="selectpicker search-fields" name="SalesmanID">
                        @{
                            foreach (var item in ViewBag.saman as List<Salesman>)
                            {
                                <option value="@item.SalesmanID">@item.SalesmanName</option>
                            }

                        }
                    </select>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12">
                <div class="form-group">
                    <label>联系方式</label>
                    <input type="text" class="input-text" name="Phone" required="required" value="@userds.UserPhone">
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12" style="margin-top:22px;">
                <input type="submit" class="btn btn-md button-theme" value="提交财产" style="width:280px">
            </div>
        </div>
    </form>
</div>
