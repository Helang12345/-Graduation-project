
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Backstage.cshtml";
}
@using Models
@{
    List<SCollection> collection = ViewBag.Follow;
}
<div class="dashboard-list">
    <h3>我的关注 </h3>
    @{
        if (collection.Count == 0)
        {
            <div class="property-box-2">
                <div class="row">
                    <div class="col-lg-5 col-md-5 col-pad">
                        <div class="property-thumbnail">
                            <a href="#" class="property-img">
                                <img src="~/Content/Selling/waneng1.jpg" alt="properties" class="img-fluid" @*style="width:300px;height:220px;"*@>
                                <div class="price-box"><span>--- 元</span> 平</div>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-7 col-md-7 col-pad align-self-center">
                        <div class="detail">
                            <h3 class="title">
                                <a href="#">没有满足要求的房屋哦</a>
                            </h3>
                            <h5 class="location">
                                <a href="#">
                                    <i class="flaticon-pin"></i>----
                                </a>
                            </h5>
                            <ul class="facilities-list clearfix">
                                <li>
                                    房屋朝向：----

                                </li>
                                <li>
                                    装修情况：----
                                </li>
                                <li>
                                    实际面积：----
                                </li>
                                <li>
                                    看房时间：----


                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        }
        else
        {
            foreach (var item in collection)
            {
                <div class="property-box-2">
                    <div class="row">
                        <div class="col-lg-5 col-md-5 col-pad">
                            <div class="property-thumbnail">
                                <a href="~/Controllers/Selling/Index?SellID=@item.SellID" class="property-img">
                                    @{ if (@item.Sell.SImg.FirstOrDefault().Photo == null)
                                        {
                                            <img src="~/Content/Selling/waneng1.jpg" alt="properties" class="img-fluid" style="width:300px;height:220px;">
                                        }
                                        else
                                        {
                                            <img src="~/Content/Selling/@item.Sell.SImg.FirstOrDefault().Photo" alt="properties" class="img-fluid" @*style="width:300px;height:220px;"*@>
                                        }
                                    }
                                    <div class="price-box"><span>@item.Sell.SellPrice 元</span> 平</div>
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-7 col-md-7 col-pad align-self-center">
                            <div class="detail">
                                <h3 class="title">
                                    <a href="/Selling/Index?SellID=@item.SellID">@item.Sell.SellAddress / @item.Sell.SellVillage</a>
                                </h3>

                                <h5 class="location">@item.Sell.SellHStructurechar</h5>
                                <ul class="facilities-list clearfix">
                                    <li>
                                        房屋朝向：
                                        @if (item.Sell.SellOrientation == 1)
                                        {
                                            @:坐北朝南
                                        }
                                        else if (item.Sell.SellOrientation == 2)
                                        {
                                            @:坐南朝北
                                        }
                                        else if (item.Sell.SellOrientation == 3)
                                        {
                                            @:坐东朝西
                                        }
                                        else
                                        {
                                            @:坐西朝东
                                        }
                                    </li>
                                    <li>
                                        装修情况：
                                        @if (item.Sell.SellRenovation == 1)
                                        {
                                            @:精装
                                        }
                                        else
                                        {
                                            @:毛坯
                                        }
                                    </li>
                                    <li>
                                        实际面积：@item.Sell.SellAreaTo
                                    </li>
                                    <li>
                                        看房时间：
                                        @if (item.Sell.SellTime == 1)
                                        {
                                            @:上午
                                        }
                                        else if (item.Sell.SellTime == 2)
                                        {
                                            @:下午
                                        }
                                        else if (item.Sell.SellTime == 3)
                                        {
                                            @:晚上
                                        }
                                        else
                                        {
                                            @:全天
                                        }
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    }
</div>
