
@{
    ViewBag.Title = "Information";
    Layout = "~/Views/Shared/_Backstage.cshtml";

}
@using Models;
@{ 
   List<Userd> userds = ViewBag.MyInformation;
}
<div class="dashboard-list">
    <h3 class="heading">个人资料详细信息</h3>
    <div class="dashboard-message contact-2 bdr clearfix">
        <div class="row">
            <div class="col-lg-3 col-md-3">
                <!-- Edit profile photo -->
                <div class="edit-profile-photo">
                    @{
                        if (userds[0].Photo == null)
                        {
                            <img src="~/Content/img/avatar/avatar-6.jpg" alt="profile-photo" class="img-fluid">
                        }
                        else
                        {
                            <img src="~/Content/Photo/@userds[0].Photo" alt="profile-photo" class="img-fluid">
                        }
                    }

                    <div class="change-photo-btn">
                        <div class="photoUpload">
                            <span><i class="fa fa-upload"></i> 上传照片</span>
                            <input type="file" class="upload">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 col-md-9">
                <form action="#" method="GET" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-6 col-md-6">
                            <div class="form-group name">
                                <label>你的名字</label>
                                <input type="text" name="UserName" class="form-control" value="@userds[0].UserName" style="color:black"/>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div class="form-group email">
                                <label>你的性别</label>
                                <select class="selectpicker search-fields" name="UserSex">
                                    <option value="0" selected="@(userds[0].UserSex==0)">男</option>
                                    <option value="1" selected="@(userds[0].UserSex==1)">女</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div class="form-group subject">
                                <label>你的电话</label>
                                <input type="text" name="UserPhone" class="form-control" value="@userds[0].UserPhone" style="color:black">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div class="form-group number">
                                <label>用户名</label>
                                <input type="email" name="SalesmanEmail" class="form-control" value="@userds[0].UserdEmail" style="color:black">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="dashboard-list">
            <h3 class="heading">更改密码</h3>
            <div class="dashboard-message contact-2" >
                <form action="EditPassword" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group name">
                                <label>当前密码</label>
                                <input type="password" name="UserPassword" class="form-control" placeholder="旧密码" style="color:black">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group email">
                                <label>新密码</label>
                                <input type="password" name="newpassword1" class="form-control" placeholder="新密码" style="color:black">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group subject">
                                <label>确认密码</label>
                                <input type="password" name="newpassword2" class="form-control" placeholder="确认密码" style="color:black">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="send-btn">
                                <button type="submit" class="btn btn-md button-theme">更改密码</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="dashboard-list">
            <h3 class="heading">联系方式</h3>
            <div class="dashboard-message contact-2" style="color:black">
                <form action="EditContact" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group name">
                                <label>电话</label>
                                <input type="text" name="UserPhone" class="form-control" placeholder="电话号码" value="@userds[0].UserPhone" style="color:black">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group email">
                                <label>电子邮箱</label>
                                <input type="text" name="SalesmanEmail" class="form-control" placeholder="邮箱地址" value="@userds[0].UserdEmail" style="color:black">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group email">
                                <label>微信</label>
                                <input type="text" name="SalesmanVX" class="form-control" placeholder="微信账号" value="@userds[0].UserdVX" style="color:black">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="send-btn">
                                <button type="submit" class="btn btn-md button-theme">更换联系方式</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
