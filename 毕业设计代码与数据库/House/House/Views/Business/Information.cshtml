
@{
    ViewBag.Title = "Information";
    Layout = "~/Views/Shared/_Backstage.cshtml";
}

<div class="dashboard-list">
    <h3 class="heading">个人资料详细信息</h3>
    <div class="dashboard-message contact-2 bdr clearfix">
        <div class="row">
            <div class="col-lg-3 col-md-3">
                <!-- Edit profile photo -->
                <div class="edit-profile-photo">
                    <img src="~/Content/img/avatar/avatar-6.jpg" alt="profile-photo" class="img-fluid">
                    <div class="change-photo-btn">
                        <div class="photoUpload">
                            <span><i class="fa fa-upload"></i> 上传照片</span>
                            <input type="file" class="upload">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 col-md-9">
                <form action="#" method="GET" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-6 col-md-6">
                            <div class="form-group name">
                                <label>你的名字</label>
                                <input type="text" name="name" class="form-control" placeholder="John Deo">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div class="form-group email">
                                <label>你的性别</label>
                                <select class="selectpicker search-fields" name="choose-state">
                                    <option>男</option>
                                    <option>女</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div class="form-group subject">
                                <label>你的电话</label>
                                <input type="text" name="phone" class="form-control" placeholder="Phone">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div class="form-group number">
                                <label>用户名</label>
                                <input type="email" name="email" class="form-control" placeholder="Email">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="dashboard-list">
            <h3 class="heading">更改密码</h3>
            <div class="dashboard-message contact-2">
                <form action="#" method="GET" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group name">
                                <label>当前密码</label>
                                <input type="password" name="current-password" class="form-control" placeholder="旧密码">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group email">
                                <label>新密码</label>
                                <input type="password" name="new-password" class="form-control" placeholder="新密码">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group subject">
                                <label>确认密码</label>
                                <input type="password" name="confirm-new-password" class="form-control" placeholder="确认密码">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="send-btn">
                                <button type="submit" class="btn btn-md button-theme">更改密码</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="dashboard-list">
            <h3 class="heading">联系方式</h3>
            <div class="dashboard-message contact-2">
                <form action="#" method="GET" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group name">
                                <label>电话</label>
                                <input type="text" name="facebook" class="form-control" placeholder="电话号码">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group email">
                                <label>电子邮箱</label>
                                <input type="text" name="twitter" class="form-control" placeholder="邮箱地址">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group email">
                                <label>微信</label>
                                <input type="text" name="twitter" class="form-control" placeholder="微信账号">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="send-btn">
                                <button type="submit" class="btn btn-md button-theme">更换联系方式</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
