                    <div class="sorting-options float-right">
                        @*<a href="properties-list-rightside.html" class="change-view-btn active-view-btn float-right"><i class="fa fa-th-list"></i></a>*@
                        <a href="LeaseDetails" class="change-view-btn float-right"><i class="fa fa-th-large"></i></a>
                    </div>
                </div>
                <!-- Property box 2 start -->
              
                    <div class="property-box-2">
                        <div class="row">
                            <div class="col-lg-5 col-md-5 col-pad">
                                <div class="property-thumbnail">
                                    <a href="Details" class="property-img">
                                        <img src="~/Content/img/properties/properties-1.jpg" alt="properties" class="img-fluid">
                                        <div class="tag">精选</div>
                                        <div class="price-box"><span>$850.00</span> 平</div>
                                    </a>
                                </div>
                            </div>
                            <div class="col-lg-7 col-md-7 col-pad align-self-center">
                                <div class="detail">
                                    <h3 class="title">
                                        <a href="Details">休闲别墅</a>
                                    </h3>
                                    <h5 class="location">
                                        <a href="#">
                                            <i class="flaticon-pin"></i>丹桂苑C栋508
                                        </a>
                                    </h5>
                                    <ul class="facilities-list clearfix">
                                        <li>
                                           房屋朝向：坐北朝南
