                                    <option>别墅</option>
                                    <option>一室一厅</option>
                                    <option>三室一厅</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <select class="selectpicker search-fields" name="commercial">
                                    <option>面积</option>
                                    <option>20-40</option>
                                    <option>40-80</option>
                                    <option>80以上</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <select class="selectpicker search-fields" name="location">
                                    <option>位置</option>
                                    <option>丹桂苑</option>
                                    <option>翠竹苑</option>
                                    <option>玉兰苑</option>
                                    <option>其它</option>
                                </select>
                            </div>
                            <div class="row">
